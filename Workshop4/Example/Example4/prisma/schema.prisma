
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password_hash String   
  avatar        String?  
  pages         Page[]
}

model Page {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  content   String
  authorId  Int?
  author    User?    @relation(fields: [authorId], references: [id])
}